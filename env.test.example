# Autotask API Integration Test Configuration
# Copy this file to .env.test and fill in your actual values

# Set to 'true' to skip integration tests (useful for CI/CD without credentials)
SKIP_INTEGRATION_TESTS=false

# Autotask API Credentials
AUTOTASK_USERNAME=your-username@company.com
AUTOTASK_INTEGRATION_CODE=your-integration-code
AUTOTASK_SECRET=your-secret-key

# Optional: Override API URL (auto-detection will be used if not provided)
# AUTOTASK_API_URL=https://webservices5.autotask.net/atservices/1.6/atws.asmx

# Test Data IDs (use existing IDs from your Autotask instance)
# These should be valid IDs that exist in your test environment
TEST_ACCOUNT_ID=1
TEST_CONTACT_ID=1
TEST_PROJECT_ID=1

# Logging Configuration
LOG_LEVEL=info

# Test Configuration
# Maximum number of retries for failed operations
MAX_RETRIES=3

# Base delay for retry operations (in milliseconds)
BASE_RETRY_DELAY=1000

# Test timeout (in milliseconds)
TEST_TIMEOUT=30000 