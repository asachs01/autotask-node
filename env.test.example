# Autotask API Integration Test Configuration
# Copy this file to .env.test and fill in your actual values

# Set to 'true' to skip integration tests (useful for CI/CD without credentials)
SKIP_INTEGRATION_TESTS=false

# Test Environment Type (sandbox | staging | production-readonly)
# Determines safety settings and operation permissions
TEST_ENVIRONMENT=production-readonly

# Autotask API Credentials
AUTOTASK_USERNAME=your-username@company.com
AUTOTASK_INTEGRATION_CODE=your-integration-code
AUTOTASK_SECRET=your-secret-key

# Optional: Override API URL (auto-detection will be used if not provided)
# AUTOTASK_API_URL=https://webservicesX.autotask.net/ATServicesRest

# Test Data IDs (use existing IDs from your Autotask instance)
# These should be valid IDs that exist in your test environment
TEST_ACCOUNT_ID=1
TEST_CONTACT_ID=1
TEST_PROJECT_ID=1
TEST_RESOURCE_ID=1

# Safety Overrides (use with caution)
# Uncomment these to override environment-based safety settings
# ALLOW_DATA_CREATION=false
# ALLOW_DATA_MODIFICATION=false
# ALLOW_DATA_DELETION=false

# Logging Configuration
LOG_LEVEL=info
ENABLE_PERFORMANCE_LOGS=false
ENABLE_DETAILED_ERRORS=true

# Performance Test Configuration
MAX_RETRIES=3
BASE_RETRY_DELAY=1000
TEST_TIMEOUT=60000

# Enhanced Integration Test Settings
DEBUG_INTEGRATION_TESTS=false

# CI/CD Settings
# Set this in CI environments to force read-only mode
# CI_ENVIRONMENT=true 